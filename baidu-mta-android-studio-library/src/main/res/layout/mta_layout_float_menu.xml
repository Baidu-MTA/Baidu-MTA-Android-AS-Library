<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/mta_float_menu_hight"
    >

    <LinearLayout
        android:id="@+id/mta_float_sub_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mta_float_menu_hight"
        android:background="@drawable/mta_menu_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/mta_img_account"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/mta_user_center_normal"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/mta_img_addtag"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/mta_add_tag_normal"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mta_float_view"
        android:layout_width="@dimen/mta_float_menu_icon_width"
        android:layout_height="@dimen/mta_float_menu_hight"
        >

        <ImageView
            android:id="@+id/mta_float_view_icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/mta_float_logo_normal"
            />

        <ImageView
            android:id="@+id/mta_float_view_icon_notify"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/mta_float_icon_anim_green"
            />
    </FrameLayout>

</FrameLayout>