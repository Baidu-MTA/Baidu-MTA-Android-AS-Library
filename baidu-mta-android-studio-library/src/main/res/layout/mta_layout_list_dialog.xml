<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/mta_list_dialog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dip"
        android:background="@drawable/mta_alert_round_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/mta_list_dialog_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/mta_report_user"
            android:drawablePadding="3dip"
            android:gravity="center"
            android:padding="5dip"
            android:text="请选择操作"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_margin="5dip"
            android:background="@color/mta_color_semitransparent" />

        <Button
            android:id="@+id/mta_list_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin ="@dimen/mta_user_center_button_text_margin"
            android:padding="@dimen/mta_user_center_button_text_padding"
            android:textSize="@dimen/mta_user_center_button_text_size"
    		android:textColor="@android:color/black"
            android:background="@drawable/mta_btn_white_rect"
            android:gravity="center"
            android:text="取  消" />
        
    </LinearLayout>

</ScrollView>